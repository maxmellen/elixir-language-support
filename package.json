{
    "name": "elixir-language-support",
    "displayName": "Elixir Language Support",
    "description": "Basic support for the Elixir programming language in VS Code.",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/maxmellen/elixir-language-support"
    },
    "icon": "icon.png",
    "publisher": "maxmellen",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:elixir"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [{
            "id": "elixir",
            "aliases": ["Elixir", "elixir"],
            "extensions": [".ex",".exs"],
            "configuration": "./elixir.language-configuration.json"
        },
        {
            "id": "eex",
            "aliases": ["EEx", "eex"],
            "extensions": [".eex"],
            "configuration": "./html.eex.language-configuration.json"
        },
        {
            "id": "html-eex",
            "aliases": ["HTML (EEx)", "html (eex)"],
            "extensions": [".html.eex"],
            "configuration": "./html.eex.language-configuration.json"
        }],
        "grammars": [{
            "language": "elixir",
            "scopeName": "source.elixir",
            "path": "./syntaxes/elixir.tmLanguage"
        },
        {
            "language": "eex",
            "scopeName": "text.elixir",
            "path": "./syntaxes/eex.tmLanguage"
        },
        {
            "language": "html-eex",
            "scopeName": "text.html.elixir",
            "path": "./syntaxes/html.eex.tmLanguage"
        }],
        "snippets": [{
            "language": "elixir",
            "path": "./snippets/snippets.json"
        }],
        "configurationDefaults": {
            "[elixir]": {
                "editor.snippetSuggestions": "top"
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
